             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileHasherAvalonia.Views.DragAndDropLayer">
    

    <Border Name="DropLayer"
            Background="#CC000000"
            DragDrop.AllowDrop="True"
            IsVisible="False">
